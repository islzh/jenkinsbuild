#!/bin/bash

set -m

main () {
    GitDaemon
    CallApi
}

GitDaemon () {
    ps -afW | grep -q 'git-daemon\.exe' && return
    git daemon --export-all --enable=upload-archive \
        --base-path="$PROJECT_DIR" &
}

CallApi () {
    curl -sS -X POST \
        -u $JENKINS_USER:$JENKINS_TOKEN \
        $JENKINS_URL/job/$JENKINS_JOB_NAME/build
}

main "$@"
